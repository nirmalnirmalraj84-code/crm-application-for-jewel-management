<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Classroom Feedback Collector</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>Classroom Feedback Collector</h1>
  </header>
  <main>
    <% if (messages && messages.length) { %>
      <div class="messages">
        <% messages.forEach(m => { %>
          <div class="msg <%= m.type %>"><%= m.text %></div>
        <% }) %>
      </div>
    <% } %>

    <div class="role-buttons">
      <a class="btn" href="/student/login">Student</a>
      <a class="btn" href="/admin/login">Staff / Admin</a>
    </div>
  </main>
</body>
</html>
